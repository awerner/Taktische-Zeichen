{% macro text(text, size="200%", color="#FFFFFF") %}
<text x="128" y="128" style="font-family: 'Roboto Slab'; font-weight: bold; dominant-baseline: central; text-anchor: middle; font-size: {{size}};" fill="{{color}}">{{text}}</text>
{% endmacro %}

{% macro diamant(fill,stroke,width,clip=True) %}
<path d="M64,128 L128,64 L192,128 L128,192 Z" stroke-width="{{width}}" stroke="{{stroke}}" fill="{{fill}}" {%if clip %}clip-path="url(#person)"{% endif %} />
{% endmacro %}

{% macro outline(fill='none', stroke='#000000')%}
<path d="M64,128 L128,64 L192,128 L128,192 Z" stroke-width="2" stroke="{{stroke}}" fill="{{fill}}" />
{% endmacro %}

{% macro sonderfunktion(funktion, color='#FFFFFF', width=0) %}
{% if funktion == 'führer' %}
<rect x="64" y="64" width="128" height="24" fill="{{color}}" clip-path="url(#person)" {% if width %}stroke="{{color}}" stroke-width="{{width}}"{% endif %} />
{% elif funktion in ('fachberater', 'sonderfunktion') %}
<rect x="64" y="64" width="128" height="24" fill="none" stroke-width="5" stroke="{{color}}" clip-path="url(#person)" />
{% endif %}
{% endmacro %}

{% macro thw(funktion='normal') %}
