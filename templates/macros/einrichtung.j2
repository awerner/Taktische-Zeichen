{% macro platz_symbol(fill,stroke,width) %}
<ellipse cx="128" cy="128" rx="64" ry="64" stroke-width="{{width}}" stroke="{{stroke}}" fill="{{fill}}" />
{% endmacro %}

{% macro platz_text(text, size="300%", color="#000000", baseline='central', y='136') %}
